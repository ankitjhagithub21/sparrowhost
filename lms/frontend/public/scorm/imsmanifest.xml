<?xml version="1.0" encoding="UTF-8"?>
<manifest identifier="com.example.dummy_course_001" version="1.0"
          xmlns="http://www.imsproject.org/xsd/imscp_rootv1p1p2"
          xmlns:adlcp="http://www.adlnet.org/xsd/adlcp_rootv1p2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.imsproject.org/xsd/imscp_rootv1p1p2 imscp_rootv1p1p2.xsd
                              http://www.adlnet.org/xsd/adlcp_rootv1p2 adlcp_rootv1p2.xsd">

  <metadata>
    <schema>ADL SCORM</schema>
    <schemaversion>1.2</schemaversion>
    <adlcp:location>metadata.xml</adlcp:location>
  </metadata>

  <organizations default="default_org">
    <organization identifier="default_org">
      <title>Dummy SCORM Course - Web Development Basics</title>
      <item identifier="item_1" identifierref="resource_1">
        <title>Introduction to HTML</title>
        <adlcp:prerequisites type="aicc_prerequisite"/>
        <adlcp:maxtimeallowed>PT30M</adlcp:maxtimeallowed>
        <adlcp:timelimitaction>continue,no message</adlcp:timelimitaction>
        <adlcp:datafromlms/>
        <adlcp:masteryscore>80</adlcp:masteryscore>
      </item>
    </organization>
  </organizations>

  <resources>
    <resource identifier="resource_1" type="webcontent" adlcp:scormtype="sco" href="index.html">
      <file href="index.html"/>
      <file href="scorm_api.js"/>
      <file href="course.js"/>
      <file href="style.css"/>
      <file href="images/logo.png"/>
      <file href="images/background.jpg"/>
      <file href="audio/welcome.mp3"/>
      <metadata>
        <adlcp:location>metadata.xml</adlcp:location>
      </metadata>
    </resource>
  </resources>
</manifest>